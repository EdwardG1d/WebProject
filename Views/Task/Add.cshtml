@model WebProject.Controllers.TaskController.AddTaskViewModel

@{
    ViewData["Title"] = "Add Task";
}

<h1>Add Task</h1>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Task.TaskName" class="control-label">Название задачи:</label>
                <input asp-for="Task.TaskName" class="form-control" />
                <span asp-validation-for="Task.TaskName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Task.ProjectId" class="control-label">Проект:</label>
                <select asp-for="Task.ProjectId" class="form-control" asp-items="@(new SelectList(Model.Projects, "Id", "Name"))">
                    <option value="">-- Выберите проект --</option>
                </select>
                <span asp-validation-for="Task.ProjectId" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input asp-for="Task.Active" class="form-check-input" /> @Html.DisplayNameFor(model => model.Task.Active)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
