@model WebProject.Models.MyTask

@{
    ViewData["Title"] = "Удалить задачу";
}

<h1>Удалить задачу</h1>

<h3>Вы уверены, что хотите удалить задачу "@Model.TaskName"?</h3>

<form asp-action="DeleteTask" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id"/>
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>