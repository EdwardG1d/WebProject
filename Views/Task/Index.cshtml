@model IEnumerable<WebProject.ViewModel.MyTaskViewModel>

@{
    ViewData["Title"] = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Tasks</h1>

<p>
    <a asp-action="Add">Create task</a>

</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Task Name
            </th>
            <th>
                Actions
            </th>   
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.TaskName
                </td>
                <td>
                    Project ID: @item <br /> 
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="About" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


