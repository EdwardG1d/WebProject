@using Microsoft.AspNetCore.Mvc.Rendering
@using WebProject.ViewModel

@model WebProject.ViewModel.ViewCreatTimeEntry

@{
    ViewData["Title"] = "Добавить задачу";
}

<h1>Добавить задачу</h1>

<h4>Задача</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата:</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hours" class="control-label">Время:</label>
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskId" class="control-label">Задача:</label>
                <select asp-for="TaskId" class="form-control" asp-items="@Model.TaskList">
                    <option value="">-- Выберите проект --</option>
                </select>
                <span asp-validation-for="TaskId" class="text-danger"></span>
            </div>

   
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">К списку задач</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
